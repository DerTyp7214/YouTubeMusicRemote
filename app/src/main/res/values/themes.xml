<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.YouTubeMusicRemote" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">?attr/isLightTheme</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:popupBackground">@drawable/menu_background</item>

        <item name="snackbarStyle">@style/Snackbar</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">
            @drawable/ic_launcher_monochrome
        </item>
        <item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi">
            @drawable/dertyp_branding
        </item>
    </style>

    <style name="Theme.YouTubeMusicRemote.FullScreen" parent="Theme.YouTubeMusicRemote">
        <item name="android:windowFullscreen">true</item>
        <item name="titleEnabled">false</item>

        <item name="background">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">32dp</item>
    </style>
</resources>