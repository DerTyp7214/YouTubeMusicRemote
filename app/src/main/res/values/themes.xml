<resources>
    <!-- Base application theme. -->
    <style name="Theme.YouTubeMusicRemote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here. -->
        <item name="android:popupBackground">@drawable/menu_background</item>

        <item name="snackbarStyle">@style/Snackbar</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="Theme.YouTubeMusicRemote.FullScreen" parent="Theme.YouTubeMusicRemote">
        <item name="android:windowFullscreen">true</item>
        <item name="titleEnabled">false</item>

        <item name="background">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">32dp</item>
    </style>
</resources>