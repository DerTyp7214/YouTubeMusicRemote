        </vector>
    </aapt:attr>

    <target android:name="mainPath">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/iconAnimTime"
                    android:propertyName="strokeWidth"
                    android:valueFrom="0"
                    android:valueTo="12" />
