        </aapt:attr>
    </target>

    <target android:name="leftPill">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/iconAnimTime"
                    android:propertyName="fillColor"
                    android:valueFrom="@android:color/transparent"
                    android:valueTo="?attr/colorSecondary" />
            </set>
        </aapt:attr>
    </target>

    <target android:name="rightPill">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/iconAnimTime"
                    android:propertyName="fillColor"
                    android:valueFrom="@android:color/transparent"
                    android:valueTo="?attr/colorSecondary" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>