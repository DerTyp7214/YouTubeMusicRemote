                    android:strokeColor="?attr/colorSecondary" />
                <path
                    android:name="leftPill"
                    android:fillColor="?attr/colorSecondary"
                    android:pathData="M196,188L196,188A12,12 0,0 1,208 200L208,232A12,12 0,0 1,196 244L196,244A12,12 0,0 1,184 232L184,200A12,12 0,0 1,196 188z" />
